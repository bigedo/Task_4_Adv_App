<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow>
        <TextView
            android:id="@+id/dialog_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item: "/>

        <EditText
            android:id="@+id/dialog_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/dialog_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item: "/>

        <EditText
            android:id="@+id/dialog_amount_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/dialog_tyoe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item: "/>

        <EditText
            android:id="@+id/dialog_type_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/dialog_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/dialog_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
    </TableRow>



</TableLayout>